{%- liquid
   assign collections = collections
-%}

<div class="page-width">
  <h1 class="title title--primary inline-richtext">
    Assembly Instructions
  </h1>
    <div class="assembly-list">
      {%- for collection in collections -%}
      {% if collection.title contains "Collection" and collection.metafields.custom.no_assembly_instructions != true %}
        <div class="assembly-collection">
          {% render 'assembly-collection',
            collection: collection
          %}
        </div>
      {% endif %}
      {%- endfor -%}
    </div>
</div>

{% schema %}
{
  "name": "t:sections.assembly-instructions.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

